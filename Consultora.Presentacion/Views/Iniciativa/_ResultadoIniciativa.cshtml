@model List<Consultora.Entidad.IniciativaEntidad>
    @{
        ViewBag.Title = "_ResultadoIniciativa";
    }

    @if (Model != null && Model.Count > 0)
    {
        <h5>Listado de Oportunidades</h5>
        <table>
            <thead>
                <tr>
                    <th></th>
                    <th>Nombre</th>
                    <th>Cod. Oportunidad</th>
                    <th>Unidad Negocio</th>
                    <th>Cliente</th>
                    <th>Tipo Servicio</th>
                    <th>Estado Oportunidad</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entidad in Model)
                {
                    <tr>
                        <td>
                            
                            @if (entidad.Estado_Iniciativa == 1)
                            {
                                @Html.ActionLink("Ver", "AsignarResposnableServicio", "Iniciativa", new { id = entidad.Cod_Iniciativa }, new { @class = "btn btn-success btn-small" })
                            }
                            else if (entidad.Estado_Iniciativa == 2)
                            {
                                @Html.ActionLink("Ver", "RevisarRFP", "Iniciativa", new { id = entidad.Cod_Iniciativa }, new { @class = "btn btn-success btn-small" })

                            }
                            else if (entidad.Estado_Iniciativa == 3)
                            {
                                @Html.ActionLink("Ver", "AsignarConsultorLider", "Iniciativa", new { id = entidad.Cod_Iniciativa }, new { @class = "btn btn-success btn-small" })

                            }
                            else if (entidad.Estado_Iniciativa == 4)
                            {
                                @Html.ActionLink("Ver", "EstimarTiemposProyecto", "Iniciativa", new { id = entidad.Cod_Iniciativa }, new { @class = "btn btn-success btn-small" })

                            }
                            else if (entidad.Estado_Iniciativa == 5)
                            {
                                @Html.ActionLink("Ver", "EstimarConsultoresProyecto", "Iniciativa", new { id = entidad.Cod_Iniciativa }, new { @class = "btn btn-success btn-small" })

                            }
                            else if (entidad.Estado_Iniciativa == 6)
                            {
                                @Html.ActionLink("Ver", "EvaluarRentabilidad", "Iniciativa", new { id = entidad.Cod_Iniciativa }, new { @class = "btn btn-success btn-small" })

                            }
                            else if (entidad.Estado_Iniciativa == 7)
                            {
                                @Html.ActionLink("Ver", "DesarrollarPropuestaTecnica", "Iniciativa", new { id = entidad.Cod_Iniciativa }, new { @class = "btn btn-success btn-small" })

                            }
                            else if (entidad.Estado_Iniciativa == 8)
                            {
                                @Html.ActionLink("Ver", "RevisarPropuestaTecnica", "Iniciativa", new { id = entidad.Cod_Iniciativa }, new { @class = "btn btn-success btn-small" })

                            }
                            else if (entidad.Estado_Iniciativa == 9)
                            {
                                @Html.ActionLink("Ver", "RespuestaCliente", "Iniciativa", new { id = entidad.Cod_Iniciativa }, new { @class = "btn btn-success btn-small" })

                            }
                            else if (entidad.Estado_Iniciativa == 10)
                            {
                                @Html.ActionLink("Ver", "GestionarInicioServicio", "Iniciativa", new { id = entidad.Cod_Iniciativa }, new { @class = "btn btn-success btn-small" })

                            }
                            else if (entidad.Estado_Iniciativa == 11)
                            {
                                @Html.ActionLink("Ver", "CerrarOportunidad", "Iniciativa", new { id = entidad.Cod_Iniciativa }, new { @class = "btn btn-success btn-small" })

                            }
                        </td>
                        <td>
                            @entidad.Nom_Iniciativa
                        </td>
                        <td>
                            @entidad.Cod_Oportunidad
                        </td>
                        <td>
                            @entidad.Negocio.Nom_Negocio
                        </td>
                        <td>
                            @entidad.Cliente.Razon_Social
                        </td>
                        <td>
                            @entidad.Servicio.Nom_Servicio
                        </td>
                        <td>
                            @if(entidad.Estado_Iniciativa == 1)
                            {
                                <span> Asignación Responsable de Servicio </span>

                            }
                            else if (entidad.Estado_Iniciativa == 2)
                            {
                                <span> Revisar RFP </span>

                            }
                            else if (entidad.Estado_Iniciativa == 3)
                            {
                                <span> Asignación Consultor Lider </span>

                            }
                            else if (entidad.Estado_Iniciativa == 4)
                            {
                                <span> Estimación Tiempo de Proyecto </span>

                            }
                            else if (entidad.Estado_Iniciativa == 5)
                            {
                                <span> Estimación Consultores de Proyecto </span>

                            }
                            else if (entidad.Estado_Iniciativa == 6)
                            {
                                <span> Evaluación Rentabilidad </span>

                            }
                            else if (entidad.Estado_Iniciativa == 7)
                            {
                                <span> Desarrollar Propuesta Técnica </span>

                            }
                            else if (entidad.Estado_Iniciativa == 8)
                            {
                                <span> Revisar Propuesta Técnica </span>

                            }
                            else if (entidad.Estado_Iniciativa == 9)
                            {
                                <span> Esperar Respuesta Cliente </span>

                            }
                            else if (entidad.Estado_Iniciativa == 10)
                            {
                                <span> Gestionar Inicio de Servicio </span>

                            }
                            else if (entidad.Estado_Iniciativa == 11)
                            {
                                <span> Oportunidad Ganada </span>

                            }

                        </td>
                    </tr>
                }

            </tbody>
        </table>
    }




