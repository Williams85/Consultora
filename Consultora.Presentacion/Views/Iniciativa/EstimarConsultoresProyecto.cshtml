@model Consultora.Entidad.IniciativaEntidad
@{
    ViewBag.Title = "EstimarConsultoresProyecto";
}

<h4>Estimacion Consultores de Proyecto</h4>
<div class="search">
    <span class="titulo">Información de Oportunidad</span>

    @using (Html.BeginForm("GrabarEstimacionConsultores", "Iniciativa", FormMethod.Post, new { @id = "FormECP", @enctype = "multipart/form-data" }))
    {
        @Html.Hidden("Indicador", "")
        @Html.HiddenFor(model => model.Cod_Iniciativa, null)
        @Html.HiddenFor(model => model.RFP, null)
        <article class="sector-100">
            <label>Nombre:</label>
            @Html.TextBox("Nom_Iniciativa", null)
        </article>
        <article class="sector-100">
            <label>Descripcion:</label>
            @Html.TextAreaFor(model => model.Des_Iniciativa)
        </article>
        <article class="sector-100">
            <label>Estado Oportunidad:</label>
            @Html.TextBoxFor(model => model.EstadoIniciativa, null, new { @disabled = "true" })
        </article>        
        <article class="sector-50">
            <label>Cod. Oportunidad:</label>
            @Html.TextBoxFor(model => model.Cod_Oportunidad, null, new { @disabled = "true" })
        </article>
        <article class="sector-50">
            <label>Fecha Registro:</label>
            @Html.TextBoxFor(model => model.FechaRegistro, null, new { @disabled = "true" })
        </article>
        <article class="sector-50">
            <label>Unidad Negocio:</label>
            @Html.DropDownListFor(model => model.Negocio.Cod_Negocio, new SelectList(ViewBag.ListaNegocio, "Cod_Negocio", "Nom_Negocio"), null, null)
        </article>
        <article class="sector-50">
            <label>Tipo Servicio:</label>
            @Html.DropDownListFor(model => model.Servicio.Cod_Servicio, new SelectList(ViewBag.ListaTipoServicio, "Cod_Servicio", "Nom_Servicio"), null, null)
        </article>
        <article class="sector-50">
            <label>Cliente:</label>
            @Html.DropDownListFor(model => model.Cliente.Cod_Cliente, new SelectList(ViewBag.ListaCliente, "Cod_Cliente", "Razon_Social"), null, null)
        </article>
        <article class="sector-25">
            <label>RFP:</label>
            <input type="file" id="RFP" name="RFP">
        </article>
        <article class="sector-25">
            <a class="btn btn-info Descargar" id="btn-ecp-descargar" href="/Iniciativa/DescargarRFP">Descargar</a>
        </article>
        
        <article class="sector-100">
            <label>Responsable Servicio:</label>
            @Html.DropDownListFor(model => model.ResponsableServicio.Cod_Usuario, new SelectList(ViewBag.ListaResponsableServicio, "Cod_Usuario", "NombreEmpleado"), null, null)
        </article>
        <article class="sector-100">
            <label>Consultor Lider:</label>
            @Html.DropDownListFor(model => model.ConsultorLider.Cod_Usuario, new SelectList(ViewBag.ListaConsultorLider, "Cod_Usuario", "NombreEmpleado"), null, null)
        </article>
        <div class="clear">
        </div>
        <article class="sector-100">
            <div class="alert alert-danger" role="alert" id="Message-Error">
                <strong></strong>
            </div>
        </article>
        <article class="lista-botones">
            <button type="submit" class="btn btn-info" id="btn-ecp-guardar">Guardar</button>
            <button type="button" class="btn btn-info" id="btn-ecp-adicional">Estimar Consultores Proyecto</button>
            <button type="button" class="btn btn-info" id="btn-ecp-siguiente">Siguiente</button>
            <button type="button" class="btn btn-info" id="btn-ecp-cancelar">Cancelar</button>
        </article>
        <article class="sector-100">

            <img src="~/images/pd-estimar-consultores-proyectos.png" width="100%" />
        </article>
    }
</div>

<!-- Modal -->
<div class="modal fade" id="ModalConsultoresProyecto" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close  btn-cerrar" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Requerimiento Consultores</h4>
            </div>
            <div class="modal-body">
                
                <div class="form-popup">
                    <span class="titulo">Información de Tipo de Consultores</span>
                    <article class="sector-50">
                        <label>Tipo Consultor:</label>
                        @Html.DropDownList("Cod_Competencia", new SelectList(ViewBag.ListaCompetencias, "Cod_Competencia", "Nom_Competencia"), null, null)
                    </article>
                    <article class="sector-50">
                        <label>Seniority:</label>
                        @Html.DropDownList("Cod_Nivel_Competencia", new SelectList(ViewBag.ListaNivelCompetencias, "Cod_Nivel_Competencia", "Nom_Nivel_Competencia"), null, null)
                    </article>
                    <article class="sector-50">
                        <label>Horas Participacion:</label>
                        @Html.TextBox("Horas_Participacion", "1")
                    </article>
                    <article class="sector-50"></article>
                    <div class="clear">

                    </div>
                    <article class="lista-botones">
                        <button type="submit" class="btn btn-success" id="btn-competencia-agregar">Agregar</button>
                        <button type="submit" class="btn btn-success" id="btn-ver-tiempos-proyecto">Ver Tiempos Proyecto</button>
                    </article>
                </div>
                <div class="grid-resultados" id="ResultadoCompetencias">

                </div>
                <div class="grid-resultados" id="ResultadosTiempoxFases">

                </div>

                <div class="lista-botones text-center">
                    <button type="button" class="btn btn-success" id="btn-ecp-grabar">Guardar</button>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default btn-cerrar" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/script-layaout")
@Scripts.Render("~/bundles/oportunidad")




